{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "YSScript",
	"patterns": 
	[
		{
			"include": "#keyword-scene"
		},
		{
			"include": "#keyword-narrator"
		},
		{
			"include": "#keyword-dialog"
		},
		{
			"include": "#keyword-choice"
		},
		{
			"include": "#keyword-option"
		}					
	],
	"repository": 
	{
		"keyword-scene": 
		{
			"name": "keyword.scene.ysscript",
			"match": "^\\s*([Ss]cene|场景)\\s*"
		},
		"keyword-narrator":
		{
			"name": "keyword.narrator.ysscript",
			"match": "^\\s*[Nn][Aa][Rr][Rr][Aa][Tt][Oo][Rr]\\s*[:：]"
		},
		"keyword-dialog":
		{
			"name": "keyword.dialog.ysscript",
			"match": "^\\s*(.+)\\s*[:：]"
		},
		"keyword-choice":
		{
			"name": "keyword.choice.ysscript",
			"match": "^\\s*([Cc]hoice|选择)\\s*$"
		},
		"keyword-option":
		{
			"name": "keyword.option.ysscript",
			"match": "^\\s*([Oo]ption|选项)\\s+"
		}		
	},
	"scopeName": "source.ys"
}